<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-Z">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi PWA de Apps Script</title>

    <!-- Manifest -->
    <link rel="manifest" href="manifest.json">

    <!-- Favicon -->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- Apple Touch Icon (opcional, pero buena práctica) -->
    <link rel="apple-touch-icon" href="icons/android-launchericon-192-192.png">

    <!-- Theme Color (para la barra de herramientas del navegador) -->
    <meta name="theme-color" content="#007bff"/>  <!-- Cambia este color si lo deseas -->

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* Para evitar barras de scroll dobles */
            font-family: sans-serif;
            background-color: #f0f0f0; /* Color de fondo mientras carga el iframe */
        }
        #appFrame {
            width: 100%;
            height: 100%;
            border: none; /* Sin bordes para el iframe */
        }
        #loading {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            font-size: 1.2em;
            color: #555;
        }
    </style>
</head>
<body>
    <div id="loading">Cargando aplicación...</div>
    <iframe id="appFrame" src="https://script.google.com/macros/s/AKfycbzsjvi73mjdITKgW3RMja3QtZx6E46KMmNvd_aWOk7rAYFS87lvtEYuCIflgS6b5sKAEw/exec" title="Mi Aplicación de Apps Script"></iframe>

    <script>
        // Registrar el Service Worker
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('service-worker.js')
                    .then(registration => {
                        console.log('ServiceWorker registrado con éxito:', registration.scope);
                    })
                    .catch(error => {
                        console.log('Fallo en el registro del ServiceWorker:', error);
                    });
            });
        }

        // Ocultar mensaje de carga una vez que el iframe haya cargado
        const iframe = document.getElementById('appFrame');
        const loadingDiv = document.getElementById('loading');
        iframe.addEventListener('load', () => {
            loadingDiv.style.display = 'none';
        });
    </script>
</body>
</html>
